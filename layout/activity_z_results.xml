<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".zResultsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOfList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/border1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border1"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="5dp"
            android:text="No Results Currently"
            android:textColor="@color/redCream"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/iceberg"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="We will notify you when a new result card is released.\nTournaments coming soon stay tuned for them.\nYou may also subscribe our youtube channel for more such details."
                android:textColor="@color/blueCream"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/refreshBtn"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_pic_for_button1"
                android:text="@string/refresh" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>