<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:layout_margin="10dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <WebView
        android:visibility="gone"
        android:id="@+id/webViewMatchComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <!--            For date and time and game name....-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/royal_air_force_48px"
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    tools:ignore="ContentDescription,RtlSymmetry" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/tournamentCardGameName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="@string/name"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tournamentCardDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date : 2020-02-10"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp" />

                        <TextView
                            android:id="@+id/tournamentCardTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginLeft="25dp"
                            android:text="Time : 4:00 P.M."
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--            For winning prize text-->
            <LinearLayout
                android:id="@+id/winprizeLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/win_prize"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:id="@+id/tournamentCardWinningPrize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:text="Loading Amount..."
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="50dp"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </LinearLayout>

            <!--            For winning prize text-->
            <LinearLayout
                android:id="@+id/perkillLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/per_kill"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:id="@+id/tournamentCardPerKillPrize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:text="Loading Amount..."
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="60dp"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </LinearLayout>

            <!--            For winning prize text-->
            <LinearLayout
                android:id="@+id/mapLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/map"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:id="@+id/tournamentCardMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="87dp"
                    android:text="Loading Map..."
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="87dp"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </LinearLayout>

            <!--            For winning prize text-->
            <LinearLayout
                android:id="@+id/versionLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/version"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:id="@+id/tournamentCardVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="63dp"
                    android:text="Loading Version..."
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="63dp"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </LinearLayout>

            <!--            For winning prize text-->
            <LinearLayout
                android:id="@+id/matchtypeLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/type"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:id="@+id/tournamentCardMatchType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="83dp"
                    android:text="Loading Type..."
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="83dp"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </LinearLayout>

            <!--            For winning prize text-->
            <LinearLayout
                android:id="@+id/entryfeeLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/entry_amount"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:id="@+id/tournamentCardEntryPrize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Loading Amount..."
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="20dp"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/watchCompletedMatchFromResultBtn"
                    android:enabled="false"
                    android:alpha="0.5"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watch_match"
                    android:background="@android:color/holo_orange_dark"
                    android:layout_marginTop="5dp" />

                <Button
                    android:id="@+id/resultLeaderBoardBtn"
                    android:layout_marginLeft="30dp"
                    android:enabled="false"
                    android:padding="5dp"
                    android:alpha="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/leader_board"
                    android:background="@android:color/holo_orange_dark"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/extraAdviseTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="#000000"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="@integer/google_play_services_version"
                tools:ignore="SmallSp" />

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>